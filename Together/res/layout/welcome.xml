<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_bg"
    tools:context=".MainActivity" 
    android:orientation="vertical">
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/logo"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_welcom_flag"
            android:layout_marginTop="@dimen/common_vitical_description_margin"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/common_nomal_text"/>
    </LinearLayout>
    
      <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
          <LinearLayout 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_gravity="bottom"
              android:layout_marginBottom="30dp">
              
              <TextView
                  android:id="@+id/login_user_id"
                  android:layout_width="140dp"
                  android:layout_height="56dp"
                  android:clickable="true"
                  android:layout_weight="1"
                  android:layout_margin="5dp"
                  android:text="登陆"
                  android:textColor="@color/white"
                  android:textSize="@dimen/common_nomal_large_text"
                  android:background="@drawable/login_btn_bg"
                  android:gravity="center"/>

              <TextView
                  android:id="@+id/regeste_user_id"
                  android:layout_width="140dp"
                  android:layout_height="56dp"
                  android:layout_weight="1"
                  android:layout_margin="5dp"
                  android:background="@drawable/login_btn_bg"
                  android:clickable="true"
                  android:gravity="center"
                  android:text="注册"
                  android:textColor="@color/white"
                  android:textSize="@dimen/common_nomal_large_text" />

          </LinearLayout>
    </LinearLayout>


</LinearLayout>

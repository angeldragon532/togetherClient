<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    tools:context=".MainActivity" 
    android:orientation="vertical">
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/black">
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_bg"
            android:layout_centerVertical="true"
            android:id="@+id/redirect_select_back_id"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择行业"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
        
        <TextView 
            android:id="@+id/redirect_select_commit_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
      <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="20dp"
        android:background="@drawable/login_input_bg"
        android:orientation="horizontal">
        
          <LinearLayout 
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="left|center_vertical"
              android:id="@+id/radiogroup_1_id">
              
              <RadioButton android:id="@+id/orderBy1"
		        android:text="互联网"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		      
		       <RadioButton android:id="@+id/orderBy2"
		        android:text="点子商务"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		      
		       <RadioButton android:id="@+id/orderBy3"
		        android:text="文体娱乐"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		     
		       <RadioButton android:id="@+id/orderBy4"
		        android:text="能源环保"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		       
		       <RadioButton android:id="@+id/orderBy5"
		        android:text="消费"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" /> 
		        
		       <RadioButton android:id="@+id/orderBy6"
		        android:text="旅游"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" /> 
		        
		       <RadioButton android:id="@+id/orderBy7"
		        android:text="游戏"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" /> 
		        
		       <RadioButton android:id="@+id/orderBy8"
		        android:text="其他"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" /> 
              
          </LinearLayout>
          
          <LinearLayout 
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="left|center_vertical"
              android:id="@+id/radiogroup_2_id">
		       
              <RadioButton android:id="@+id/orderBy9"
		        android:text="移动互联网"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		      
		       <RadioButton android:id="@+id/orderBy10"
		        android:text="O2O"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		      
		       <RadioButton android:id="@+id/orderBy11"
		        android:text="医疗健康"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" />
		     
		       <RadioButton android:id="@+id/orderBy12"
		        android:text="智能硬件"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/>
		       
		       <RadioButton android:id="@+id/orderBy13"
		        android:text="金融"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" /> 
		        
		       <RadioButton android:id="@+id/orderBy14"
		        android:text="教育"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" /> 
		        
		       <RadioButton android:id="@+id/orderBy15"
		        android:text="汽车"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" /> 
		        
		       <RadioButton android:id="@+id/orderBy16"
		        android:text="社交"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"/> 
              
          </LinearLayout>
        
              
    </LinearLayout>

      
</LinearLayout>
